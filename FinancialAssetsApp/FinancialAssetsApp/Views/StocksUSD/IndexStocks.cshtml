@model IEnumerable<FinancialAssetsApp.Models.StockUSD>
@{
    ViewData["Title"] = "US Stocks";
    var investedSum = Model.Sum(s => s.SumStocksToRuble);
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">My US Stocks</h2>

    <div class="d-flex gap-3">
        <div class="card text-center shadow-sm">
            <div class="card-body p-3">
                <div class="text-muted small">Current Value</div>
                <div class="fw-bold fs-5 text-success" id="totalCurrSum">
                    0 ₽
                </div>
            </div>
        </div>
        <div class="card text-center shadow-sm">
            <div class="card-body p-3">
                <div class="text-muted small">Change</div>
                <div class="fw-bold fs-5" id="totalChange">
                    —
                </div>
                <div class="small" id="totalChangePercent"></div>
            </div>
        </div>
        <div class="card text-center shadow-sm">
            <div class="card-body p-3">
                <div class="text-muted small">Invested Value</div>
                <div class="fw-bold fs-5 text-primary" id="investedSum" data-value="@investedSum">
                    @investedSum.ToString("N0") ₽
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Ticker</th>
                <th>Company Name</th>
                <th>Purchase Price</th>
                <th>Quantity</th>
                <th>Cost</th>
                <th>Cost in Rubles</th>
                <th>Change</th>
                <th>Current Cost in Rubles</th>
                <th>Date Added</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-stocksUSD="@item.Ticker">
                    <td>@item.Ticker</td>
                    <td>@item.NameCompany</td>
                    <td>@item.Price $</td>
                    <td>@item.AmountStock</td>
                    <td>@item.SumStocks $</td>
                    <td>@item.SumStocksToRuble.ToString("F2") ₽</td>
                    <td style="font-weight: bold" class="change-sumRUB">Loading...</td>
                    <td class="current-sumRUB">Loading...</td>
                    <td>@item.DateAddStock.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!--
        <a asp-action="FixSums" class="btn btn-secondary">Recalculate Old Totals</a> // If a new column is added to the DB
    -->
    <a asp-action="Create" class="btn btn-primary">Add Stock</a>
</div>

<h2>US Stocks Distribution Pie Chart</h2>
<div class="d-flex justify-content-center align-items-start gap-4">
    <div class="chart-container">
        <canvas style="width: 450px; height: 450px" id="TickerPieUSD"></canvas>
        <h3 class="text-center">By Purchase Amount</h3>
    </div>
    <div class="chart-container" style="width: 450px; height: 450px">
        <canvas id="CurrentStocksUSDPie"></canvas>
        <h3 class="text-center">By Current Price</h3>
    </div>
</div>
<script src="~/js/site.js" asp-append-version="true"></script>
