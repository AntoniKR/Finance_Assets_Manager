@model FinancialAssetsApp.Models.Crypto
@{
    ViewData["Title"] = "Добавить криптовалюту";
}
<div class="container">
    <h2> Добавить криптовалюту</h2>
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="Ticker" class="form-label">Тикер *</label>
            <input asp-for="Ticker" id="TickerInput" class="form-control"/>
            <span asp-validation-for="Ticker" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="NameCrypto" class="form-label">Название криптовалюты</label>
            <input asp-for="NameCrypto" type="text" pattern="[A-Za-zА-Яа-яЁё\s\-]+" title="Разрешены только буквы" class="form-control" />
        </div>
        <div>
            <label asp-for="Price" class="form-label">Цена покупки *</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="AmountCrypto" class="form-label">Количество *</label>
            <input asp-for="AmountCrypto" type="text" class="form-control" />
            <span asp-validation-for="AmountCrypto" class="text-danger"></span>

        </div>
        <p></p>

        <button type="submit" class="btn btn-primary">Добавить криптовалюту</button>
        <a asp-action="IndexCrypto" class="btn btn-secondary">Отмена</a>

    </form>
    <div>
        * - Обязательные поля для заполнения
    </div>
</div>

