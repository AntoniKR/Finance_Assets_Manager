@model IEnumerable<FinancialAssetsApp.Models.Crypto>
@{
    ViewData["Title"] = "Cryptocurrency";
    var investedSum = Model.Sum(s => s.SumCryptoToRuble);
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">My Cryptocurrency</h2>

    <div class="d-flex gap-3">
        <div class="card text-center shadow-sm">
            <div class="card-body p-3">
                <div class="text-muted small">Current Value</div>
                <div class="fw-bold fs-5 text-success" id="cryptoTotalCurrent">
                    0 ₽
                </div>
            </div>
        </div>
        <div class="card text-center shadow-sm">
            <div class="card-body p-3">
                <div class="text-muted small">Change</div>
                <div class="fw-bold fs-5" id="cryptoTotalChange">
                    —
                </div>
                <div class="small" id="cryptoChangePercent"></div>
            </div>
        </div>
        <div class="card text-center shadow-sm">
            <div class="card-body p-3">
                <div class="text-muted small">Invested Value</div>
                <div class="fw-bold fs-5 text-primary" id="cryptoTotalInvested" data-value="@investedSum">
                    @investedSum.ToString("N0") ₽
                </div>
            </div>
        </div>
    </div>
</div>
<p style="font-style: italic; text-align: right">* Current price data taken from Bybit</p>
<p style="font-style: italic; text-align: right">If you can't see price data then this cryptocurrency doesn't trade on Bybit</p>
<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Ticker</th>
                <th>Name of cryptocurrency</th>
                <th>Purchase price</th>
                <th>Change price</th>
                <th>Current price</th>
                <th>Quantity</th>
                <th>Cost purchase</th>
                <th>Change Cost</th>
                <th>Current Cost</th>
                <th>Purchase price in RUB</th>
                <th>Change Cost in RUB</th>
                <th>Current Cost in RUB</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-cryptos="@item.Ticker">
                    <td>@item.Ticker</td>
                    <td>@item.NameCrypto</td>
                    <td>@item.Price $</td>
                    <td style="font-weight: bold" class="change-price">Load...</td>
                    <td class="current-price">Load...</td>
                    <td>@item.AmountCrypto</td>
                    <td>@item.SumCrypto.ToString("F3") $</td>

                    <td style="font-weight: bold" class="change-sum">Load...</td>
                    <td class="current-sum">Load...</td>
                    <td>@item.SumCryptoToRuble.ToString("F2") ₽</td>
                    <td style="font-weight: bold" class="change-sumRUB">Load...</td>
                    <td class="current-sumRUB">Load...</td>

                    <td>@item.DateAddStock.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <!--
        <a asp-action="FixSums" class="btn btn-secondary">Fix old sums</a> // If we need to change data rows
    -->

    <a asp-action="Create" class="btn btn-primary">Add cryptocurrency</a>
</div>

<h2 class="text-center mb-4">Cryptocurrency Distribution Pie Chart</h2>
<div class="d-flex justify-content-center align-items-start gap-4">
    <div class="chart-container">
        <canvas style="width: 450px; height: 450px" id="CryptoPie"></canvas>
        <h3 class="text-center">By Purchase Sum</h3>
    </div>
    <div class="chart-container" style="width: 450px; height: 450px">
        <canvas id="CurrentCryptoPie"></canvas>
        <h3 class="text-center">By Current Sum</h3>
    </div>
</div>
<script src="~/js/site.js" asp-append-version="true"></script>