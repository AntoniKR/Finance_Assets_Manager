@model IEnumerable<FinancialAssetsApp.Models.PlatformStartup>
@{
    ViewData["Title"] = "Платформы стартапов";
}
<h2>Мои платформы</h2>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Название платформы</th>
                <th>Количество компаний</th>
                <th>Сумма инвестиций</th>
                <th>Дата добавления </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-metals="@item.NamePlatform">
                    <td>@item.NamePlatform</td>
                    <td>@item.AmountCompanies</td>
                    <td>@item.SumOfStartups ₽</td>
                    <td>@item.DateAddStock.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <!--
        <a asp-action="FixSums" class="btn btn-secondary">Пересчитать старые суммы</a> // Если добавится новый столбец в БД
    -->

    <a asp-action="Create" class="btn btn-primary">Добавить платформу</a>
</div>

<h2 class="text-center mb-4">Круговая диаграмма распределения по платформам</h2>
<div class="d-flex justify-content-center align-items-start gap-4">
    <div class="chart-container">
        <canvas style="width: 450px; height: 450px" id="PlatformsPie"></canvas>
        <h3 class="text-center">По сумме инвестиций</h3>
    </div>
    <div class="chart-container">
        <canvas style="width: 450px; height: 450px" id="PlatformsCount"></canvas>
        <h3 class="text-center">По количеству компаний</h3>
    </div>
</div>
<script src="~/js/site.js" asp-append-version="true"></script>
