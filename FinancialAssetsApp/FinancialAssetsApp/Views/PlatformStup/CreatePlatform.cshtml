@model FinancialAssetsApp.Models.PlatformStartup
@{
    ViewData["Title"] = "Добавить платформу";
}
<div class="container">
    <h2> Добавить платформу с вашими стартапами</h2>
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="NamePlatform" class="form-label">Название платформы *</label>
            <select asp-for="NamePlatform" class="form-control" asp-items="ViewBag.Platforms">
                <option value="" disabled selected hidden>- Выберите платформу</option>
            </select>
            <span asp-validation-for="NamePlatform" class="text-danger"></span>
        </div>
        <p></p>
        <button type="submit" class="btn btn-primary">Добавить платформу</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>

    </form>
    <div>
        * - Обязательные поля для заполнения
    </div>
</div>

