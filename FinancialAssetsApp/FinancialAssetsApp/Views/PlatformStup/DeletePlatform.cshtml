@model FinancialAssetsApp.Models.PlatformStartup
@{
    ViewData["Title"] = "Удалить платформу с стартапами";
}
<h2>Удаление платформы</h2>

<h4>Вы действительно хотите удалить платформу "@Model.NamePlatform" ?</h4>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>