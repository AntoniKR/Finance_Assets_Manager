@model IEnumerable<FinancialAssetsApp.Models.Metal>
@{
    ViewData["Title"] = "Металлы";
}
<h2>Мои металлы</h2>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Название металла</th>
                <th>Цена</th>
                <th>Текущая Цена</th>
                <th>Количество</th>
                <th>Стоимость</th>

                <th>Изменение стоимости</th>
                <th>Текущая стоимость</th>

                <th>Дата добавления </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-metals="@item.NameMetal">
                    <td>@item.NameMetal</td>
                    <td>@item.Price ₽</td>

                    <td class="current-price">Загрузка...</td>

                    <td>@item.AmountMetal</td>
                    <td>@item.SumMetals ₽</td>

                    <td style="font-weight: bold" class="change-sum">Загрузка...</td>
                    <td class="current-sum">Загрузка...</td>

                    <td>@item.DateAddStock.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <!--
        <a asp-action="FixSums" class="btn btn-secondary">Пересчитать старые суммы</a> // Если добавится новый столбец в БД
    -->

    <a asp-action="Create" class="btn btn-primary">Добавить металл</a>
</div>

<h2 class="text-center mb-4">Круговая диаграмма распределения металла</h2>
<div class="d-flex justify-content-center align-items-start gap-4">
    <div class="chart-container">
        <canvas style="width: 450px; height: 450px" id="PurchasePie"></canvas>
        <h3 class="text-center">По сумме покупки</h3>
    </div>
    <div class="chart-container" style="width: 450px; height: 450px">
        <canvas id="CurrentPricePie"></canvas>
        <h3 class="text-center">По текущей цене</h3>
    </div>
</div>
<script src="~/js/site.js" asp-append-version="true"></script>
