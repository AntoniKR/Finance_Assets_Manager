@model IEnumerable<FinancialAssetsApp.Models.Metal>
@{
    ViewData["Title"] = "Metals";
    var investedSum = Model.Sum(s => s.SumMetals);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">My Metals</h2>

    <div class="d-flex gap-3">
        <div class="card text-center shadow-sm">
            <div class="card-body p-3">
                <div class="text-muted small">Current Value</div>
                <div class="fw-bold fs-5 text-success" id="metalsTotalCurrent">
                    0 ₽
                </div>
            </div>
        </div>        
        <div class="card text-center shadow-sm">
            <div class="card-body p-3">
                <div class="text-muted small">Change</div>
                <div class="fw-bold fs-5" id="metalsTotalChange">
                    —
                </div>
                <div class="small" id="metalsChangePercent"></div>
            </div>
        </div>
        <div class="card text-center shadow-sm">
            <div class="card-body p-3">
                <div class="text-muted small">Invested Value</div>
                <div class="fw-bold fs-5 text-primary" id="metalsTotalInvested" data-value="@investedSum">
                    @investedSum.ToString("N0") ₽
                </div>
            </div>
        </div>        
    </div>
</div>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Metal Name</th>
                <th>Purchase Price</th>
                <th>Current Price</th>
                <th>Quantity</th>
                <th>Purchase Value</th>
                <th>Value Change</th>
                <th>Current Value</th>
                <th>Date Added</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-metals="@item.NameMetal">
                    <td>@item.NameMetal</td>
                    <td>@item.Price ₽</td>
                    <td class="current-price">Loading...</td>
                    <td>@item.AmountMetal</td>
                    <td>@item.SumMetals ₽</td>
                    <td style="font-weight: bold" class="change-sum">Loading...</td>
                    <td class="current-sum">Loading...</td>
                    <td>@item.DateAddStock.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!--
        <a asp-action="FixSums" class="btn btn-secondary">Recalculate old sums</a> // If a new column is added in DB
    -->

    <a asp-action="Create" class="btn btn-primary">Add Metal</a>
</div>

<h2 class="text-center mb-4">Metal Distribution Pie Chart</h2>
<div class="d-flex justify-content-center align-items-start gap-4">
    <div class="chart-container">
        <canvas style="width: 450px; height: 450px" id="PurchasePie"></canvas>
        <h3 class="text-center">By Purchase Value</h3>
    </div>
    <div class="chart-container" style="width: 450px; height: 450px">
        <canvas id="CurrentPricePie"></canvas>
        <h3 class="text-center">By Current Price</h3>
    </div>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>

