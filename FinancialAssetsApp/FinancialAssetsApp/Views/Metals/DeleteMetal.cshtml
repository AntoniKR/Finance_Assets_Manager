@model FinancialAssetsApp.Models.Metal
@{
    ViewData["Title"] = "Удалить металл";
}
<h2>Удаление металла</h2>

<h4>Вы действительно хотите удалить металл "@Model.NameMetal" ?</h4>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="IndexMetals" class="btn btn-secondary">Отмена</a>
</form>