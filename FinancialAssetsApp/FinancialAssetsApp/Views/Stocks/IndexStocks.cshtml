@model IEnumerable<FinancialAssetsApp.Models.Stock>
@{
    ViewData["Title"] = "Russian Stocks";
    var investedSum = Model.Sum(s => s.SumStocks);
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">My Russian Stocks</h2>

    <div class="d-flex gap-3">
        <div class="card text-center shadow-sm">
            <div class="card-body p-3">
                <div class="text-muted small">Current Value</div>
                <div class="fw-bold fs-5 text-success" id="stocksTotalCurrent">
                    0 ₽
                </div>
            </div>
        </div>
        <div class="card text-center shadow-sm">
            <div class="card-body p-3">
                <div class="text-muted small">Change</div>
                <div class="fw-bold fs-5" id="stocksTotalChange">
                    —
                </div>
                <div class="small" id="stocksChangePercent"></div>
            </div>
        </div>
        <div class="card text-center shadow-sm">
            <div class="card-body p-3">
                <div class="text-muted small">Invested Value</div>
                <div class="fw-bold fs-5 text-primary" id="stocksTotalInvested" data-value="@investedSum">
                    @investedSum.ToString("N0") ₽
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Ticker</th>
                <th>Company Name</th>
                <th>Purchase Price</th>
                <th>Quantity</th>
                <th>Cost</th>
                <th>Date Added</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ticker</td>
                    <td>@item.NameCompany</td>
                    <td>@item.Price ₽</td>
                    <td>@item.AmountStock</td>
                    <td>@item.SumStocks ₽</td>
                    <td>@item.DateAddStock.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!--
        <a asp-action="FixSums" class="btn btn-secondary">Recalculate Old Totals</a> // If a new column is added to the DB
    -->
    <a asp-action="Create" class="btn btn-primary">Add Stock</a>
</div>

<h2>Russian Stocks Distribution Pie Chart</h2>
<div class="d-flex justify-content-center align-items-start gap-4">
    <div class="text-center">
        <canvas style="width: 450px; height: 450px" id="TickerPie"></canvas>
        <h3>By Companies</h3>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
