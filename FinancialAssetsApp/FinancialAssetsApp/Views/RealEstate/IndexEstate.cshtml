@model IEnumerable<FinancialAssetsApp.Models.RealEstate>
@{
    ViewData["Title"] = "Real Estate";
}

<h2>My Real Estate</h2>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Property type</th>
                <th>Property location</th>
                <th>Purchase price</th>
                <th>Quantity</th>
                <th>Total value</th>
                <th>Date added</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TypeEstate</td>
                    <td>@item.CityEstate</td>
                    <td>@item.Price.ToString("N0") ₽</td>
                    <td>@item.AmountEstate</td>
                    <td>@item.SumEstate.ToString("N0") ₽</td>
                    <td>@item.DateAddStock.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!--
        <a asp-action="FixSums" class="btn btn-secondary">Recalculate old totals</a> // If a new column is added to the DB
    -->

    <a asp-action="Create" class="btn btn-primary">Add real estate</a>
</div>

<h2 class="text-center mb-4">Real estate distribution pie chart</h2>

<div class="d-flex justify-content-center align-items-start gap-4">
    <div class="chart-container">
        <canvas style="width: 450px; height: 450px" id="CitiesRealEstates"></canvas>
        <h3 class="text-center">By cities</h3>
    </div>
    <div class="chart-container">
        <canvas style="width: 450px; height: 450px" id="TypeRealEstate"></canvas>
        <h3 class="text-center">By purchase value</h3>
    </div>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>

