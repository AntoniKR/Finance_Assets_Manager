@{
    ViewData["Title"] = "Main page";
}

<div class="text-center">
    <h1 class="display-4">Financial Manager</h1>
    <p>Your portfolio</p>
</div>

<div class="d-flex justify-content-center align-items-center">
    <div class="text-center">
        <canvas style="width: 450px; height: 450px;" id="SummPie"></canvas>
        <h3>Asset distribution</h3>
    </div>
    <div class="text-center">
        <canvas style="width: 450px; height: 450px;" id="SummBar"></canvas>
        <h3>Asset distribution (%)</h3>
    </div>
    <div class="text-center">
        <canvas style="width: 450px; height: 450px;" id="EstateTransportPie"></canvas>
        <h3>Distribution by total amount</h3>
    </div>
    <div class="text-center">
        <canvas style="width: 450px; height: 450px;" id="SumEstateTransport"></canvas>
        <h3>Real estate and transport distribution (%)</h3>
    </div>
</div>

<div class="text-center">
    <h1><b>Total assets value</b></h1>
    <h2><i><div id="Summ"></div></i></h2>
</div>

<div class="text-center">
    <h1><b>Total real estate and transport value</b></h1>
    <h2><i><div id="SummEstTrans"></div></i></h2>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>
