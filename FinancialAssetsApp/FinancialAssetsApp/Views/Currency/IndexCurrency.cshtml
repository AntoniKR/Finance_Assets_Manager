@model IEnumerable<FinancialAssetsApp.Models.Currency>
@{
    ViewData["Title"] = "Currency";
}
<h2>My Currency</h2>
<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Code currency</th>
                <th>Name of cryptocurrency</th>
                <th>Purchase price</th>
                <th>Change price</th>
                <th>Current price</th>
                <th>Cost</th>
                <th>Purchase price in RUB</th>
                <th>Change Cost in RUB</th>
                <th>Current Cost in RUB</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-currency="@item.CharCode">
                    <td>@item.CharCode</td>
                    <td class="nameCurrency">@item.NameCurrency</td>
                    <td>@item.Price ₽</td>

                    <td style="font-weight: bold" class="change-price">Load...</td>
                    <td class="current-price">Load...</td>

                    <td>@item.AmountCurrency</td>
                    <td>@item.SumCurrencyToRuble ₽</td>

                    <td style="font-weight: bold" class="change-sumRUB">Load...</td>
                    <td class="current-sumRUB">Load...</td>

                    <td>@item.DateAddStock.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="DeleteCurrency" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!--
        <a asp-action="FixSums" class="btn btn-secondary">Fix old sums</a> // If we need to change data rows
    -->  
    <a asp-action="CreateCurrency" class="btn btn-primary">Add currency</a>
</div>

<h2 class="text-center mb-4">Currency Distribution Pie Chart</h2>
<div class="d-flex justify-content-center align-items-start gap-4">
    <div class="chart-container">
        <canvas style="width: 450px; height: 450px" id="CurrencyPie"></canvas>
        <h3 class="text-center">By Purchase Sum</h3>
    </div>
    <div class="chart-container" style="width: 450px; height: 450px">
        <canvas id="CurrentCurrencyPie"></canvas>
        <h3 class="text-center">By Current Sum</h3>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
