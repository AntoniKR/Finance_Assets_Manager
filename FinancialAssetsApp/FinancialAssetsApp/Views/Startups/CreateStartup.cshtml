@model FinancialAssetsApp.Models.Startup
@{
    ViewData["Title"] = "Добавить стартап";
}
<div class="container">
    <h2> Добавить стартап</h2>
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="NamePlatform" class="form-label">Название платформы *</label>
            <select asp-for="NamePlatform" class="form-control" asp-items="ViewBag.PlatformStartup">
                <option value="" disabled selected hidden>- Выберите платформу</option>
            </select>
            <span asp-validation-for="NamePlatform" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="NameCompany" class="form-label">Название компании *</label>
            <input asp-for="NameCompany" class="form-control"/>
        </div>
        <div>
            <label asp-for="Price" class="form-label">Цена покупки *</label>
            <input asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="AmountStock" class="form-label">Количество *</label>
            <input asp-for="AmountStock" class="form-control" />
            <span asp-validation-for="AmountStock" class="text-danger"></span>
        </div>
        <p></p>

        <button type="submit" class="btn btn-primary">Добавить стартап</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>

    </form>
    <div>
        * - Обязательные поля для заполнения
    </div>
</div>

