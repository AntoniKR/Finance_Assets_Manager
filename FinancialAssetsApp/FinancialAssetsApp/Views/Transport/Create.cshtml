@model FinancialAssetsApp.Models.Transport
@{
    ViewData["Title"] = "Добавить транспорт";
}
<div class="container">
    <h2> Добавить транспорт</h2>
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="TypeTransport" class="form-label">Тип транспорта *</label>
            <select asp-for="TypeTransport" class="form-control" asp-items="ViewBag.TransportType">
                <option value="" disabled selected hidden>- Выберите транспорт</option>
            </select>
            <span asp-validation-for="TypeTransport" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="NameTransport" class="form-label">Название транспорта</label>
            <input asp-for="NameTransport" class="form-control" />
            <span asp-validation-for="NameTransport" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Price" class="form-label">Цена покупки *</label>
            <input asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="YearOfTransport" class="form-label">Год выпуска</label>
            <input asp-for="YearOfTransport" class="form-control" />
            <span asp-validation-for="YearOfTransport" class="text-danger"></span>
        </div>
        <p></p>

        <button type="submit" class="btn btn-primary">Добавить транспорт</button>
        <a asp-action="IndexTransport" class="btn btn-secondary">Отмена</a>

    </form>
    <div>
        * - Обязательные поля для заполнения
    </div>
</div>

